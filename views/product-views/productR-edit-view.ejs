<div class="container newproduct">
  <div class"row newproduct">
    <div class="col-sm-3 newproduct">

    </div>
    <div class="col-sm-6 newproduct">
      <h2>EDIT PURCHASE ORDER</h2>

    </div>
    <div class="col-sm-2 newproduct">

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-5">
      <img src="/images/orderonline02.jpg" style="height:300px" alt="">
    </div>
    <div class="col-sm-6">

        <form class="form-horizontal" action="/my-productsR/<%=productRFromDb._id%>/update " method="post">

          <div class="form-group">
            <label for="poNumber-input" class="col-sm-2 control-label">PO Number</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" id="poNumber-input" value="<%= productRFromDb.poNumber%>" name="newProductPoOrder">
            </div>
          </div>
          <div class="form-group">
            <label for="type-input" class="col-sm-2 control-label">Type/Grams *</label>
            <div class="col-sm-10">
                  <input type="text" class="form-control" id="type-input" value="<%= productRFromDb.typeOfP%>" name="newProductType">

            </div>
          </div>

          <div class="form-group">
            <label for="coated-input" class="col-sm-2 control-label">Coated</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="coated-input" value="<%= productRFromDb.coated%>" name="newProductCoated">

            </div>
          </div>

          <div class="form-group">
            <label for="width-input" class="col-sm-2 control-label">Width *</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="width-input" placeholder="Width" value="<%= productRFromDb.width%>" name="newProductWidth">
            </div>
          </div>
          <div class="form-group">
            <label for="length-input" class="col-sm-2 control-label">Length *</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" id="length-input" placeholder="Length in Mts" value="<%= productRFromDb.length%>" name="newProductLength">
            </div>
          </div>
          <div class="form-group">
            <label for="intDiam-input" class="col-sm-2 control-label">Int. Diam. *</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" id="intDiam-input" placeholder="Interior Diameter in mm" value="<%= productRFromDb.intDiam%>" name="newProductIntDiam">
            </div>
          </div>




          <div class="form-group" style="margin-top:15px;">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary">UPDATE</button>
            </div>
          </div>
        </form>

    </div>

  </div>
</div>
